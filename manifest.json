{
  "manifest_version": 3,
  "name": "AI Subtitle Translator",
  "version": "1.0.0",
  "description": "AI-powered subtitle translation for streaming platforms (YouTube, Netflix, Disney+, Prime Video)",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "identity"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.netflix.com/*",
    "*://*.disneyplus.com/*",
    "*://*.primevideo.com/*",
    "*://*.amazon.com/gp/video/*",
    "https://api.anthropic.com/*",
    "https://api.openai.com/*",
    "http://localhost:11434/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.netflix.com/*",
        "*://*.disneyplus.com/*",
        "*://*.primevideo.com/*",
        "*://*.amazon.com/gp/video/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.netflix.com/*",
        "*://*.disneyplus.com/*",
        "*://*.primevideo.com/*",
        "*://*.amazon.com/gp/video/*"
      ],
      "js": ["bridge.js"],
      "css": [
        "styles/floating-button.css",
        "styles/translate-button.css",
        "styles/error-display.css",
        "styles/progress-overlay.css"
      ],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Subtitle Translator",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
